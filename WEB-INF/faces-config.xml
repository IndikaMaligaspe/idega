<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd"
[
 <!ELEMENT idegaweb-info ANY>
 <!ELEMENT builder-visible (#PCDATA)>
 <!ELEMENT object-type (#PCDATA)>
 <!ELEMENT component-metadata ANY>
 <!ATTLIST component-metadata
     component-type CDATA #IMPLIED>
 <!ELEMENT facet-metadata ANY>
 <!ELEMENT attribute-metadata ANY>
 <!ELEMENT property-metadata ANY>
 <!ELEMENT accepts-child-components (#PCDATA)>
 <!ELEMENT attribute-values (#PCDATA)>
 <!ELEMENT base-component-type  (#PCDATA)>
 <!ELEMENT deprecated  (#PCDATA)>
 <!ELEMENT display-order  (#PCDATA)>
 <!ELEMENT expert  (#PCDATA)>
 <!ELEMENT favorite-property  (#PCDATA)>
 <!ELEMENT group  (#PCDATA)>
 <!ELEMENT help-topic  (#PCDATA)>
 <!ELEMENT hidden  (#PCDATA)>
 <!ELEMENT initial-value  (#PCDATA)>
 <!ELEMENT preferred  (#PCDATA)>
 <!ELEMENT preferred-child-tags  (#PCDATA)>
 <!ELEMENT property-editor  (#PCDATA)>
 <!ELEMENT short-description  (#PCDATA)>
 <!ELEMENT writable  (#PCDATA)> 
]
>
<faces-config>

  <component>
    <component-type>com.idega.UICasesList</component-type>
    <component-class>com.idega.block.process.presentation.UICasesList</component-class>
    <property>
      <display-name>Type of the list</display-name>
      <property-name>type</property-name>
      <property-class>java.lang.String</property-class>
    </property>
    <property>
      <display-name>Default page size</display-name>
      <property-name>pageSize</property-name>
      <property-class>int</property-class>
    </property>
    <property>
      <display-name>Show check boxes</display-name>
      <property-name>showCheckBoxes</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Use PDF Download Column</display-name>
      <property-name>usePDFDownloadColumn</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Allow PDF signing</display-name>
      <property-name>allowPDFSigning</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Show statistics</display-name>
      <property-name>showStatistics</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Hide empty section</display-name>
      <property-name>hideEmptySection</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Add credentials to external URLs</display-name>
      <property-name>addCredentialsToExernalUrls</property-name>
      <property-class>boolean</property-class>
    </property>
    <property>
      <display-name>Comma separated case statuses to exclude from criteria</display-name>
      <property-name>caseStatusesToHide</property-name>
      <property-class>java.lang.String</property-class>
    </property>
    <property>
      <display-name>Comma separated case statuses to include in criteria</display-name>
      <property-name>caseStatusesToShow</property-name>
      <property-class>java.lang.String</property-class>
    </property>
    <component-extension>
      <idegaweb-info>
        <builder-visible>true</builder-visible>
        <object-type>jsf.uicomponent</object-type>
      </idegaweb-info>
    </component-extension>
  </component>
  
</faces-config>